<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:transitionName="poster"
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ivPoster" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:lines="1"
            android:text="Movie name"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/ivPoster" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/ivPoster"/>
    <TextView
            android:lines="1"
            android:text="Release date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvReleaseDate" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/ivPoster"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="20sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/ivPoster"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
</android.support.constraint.ConstraintLayout>